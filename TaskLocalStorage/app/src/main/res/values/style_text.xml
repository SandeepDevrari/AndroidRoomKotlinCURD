<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Text Styles-->
    <style name="Widget" />

    <style name="Widget.Task" />

    <style name="Widget.Task.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.03125</item>
        <item name="android:textColorHint">@color/alabaster</item>
    </style>

    <style name="Widget.Task.Text.Large" parent="Widget.Task.Text">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Task.Text.Heading" parent="Widget.Task.Text">
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Task.Text.Title" parent="Widget.Task.Text">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:elevation" tools:ignore="NewApi">0dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.Task.Text.Subtitle" parent="Widget.Task.Text">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Widget.Task.Text.Body" parent="Widget.Task.Text">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.Task.Text.Menu" parent="Widget.Task.Text">
        <item name="android:textSize">@dimen/text_size_menu</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Task.Text.Content" parent="Widget.Task.Text">
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Task.Text.Toolbar" parent="Widget.Task.Text">
        <item name="android:textSize">@dimen/text_size_toolbar</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Widget.Task.Text.Small" parent="Widget.Task.Text">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Task.Text.Tiny" parent="Widget.Task.Text">
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Task.Text.FootNote" parent="Widget.Task.Text">
        <item name="android:textSize">@dimen/text_size_footnote</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/_3sdp</item>
    </style>

