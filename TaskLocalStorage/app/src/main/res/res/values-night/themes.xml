<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ResearchCrestAcademy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/wild_sand</item>

        <!--color on the top of primary-->
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_900</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorError">@color/red_a700</item>
        <item name="colorOnError">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:colorBackground">@color/wild_sand</item>
    </style>

    <style name="Theme.ResearchCrestAcademy.NoActionBar">
        <!--        <item name="windowActionBar">false</item>-->
        <!--        <item name="windowNoTitle">true</item>-->
        <!--        <item name="android:windowTranslucentStatus">false</item>-->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red_a700</item>
    </style>
</resources>