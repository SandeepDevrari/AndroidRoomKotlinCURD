<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewHandler"
            type="com.task.tasklocalstorage.ui.helper.callback.OnViewClicked" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            style="@style/Widget.Task.Text.Body.Black.Bold"
            android:text="No User found"
            android:id="@+id/tv_no_data"
            android:visibility="gone"
            android:layout_marginVertical="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/rv_all_user"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/layout_view_user_info"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add_new_user"
            android:orientation="horizontal"
            android:onClick="@{viewHandler::onViewClicked}"
            android:layout_marginVertical="@dimen/_10sdp"
            android:background="@drawable/shape_corner_rectangle"
            android:padding="@dimen/_8sdp">
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_add"/>
            <TextView
                style="@style/Widget.Task.Text.Body.Black.Bold"
                android:text="Add New User"
                android:layout_marginHorizontal="@dimen/_10sdp"/>
        </LinearLayout>
    </LinearLayout>
</layout>